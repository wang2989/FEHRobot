int main(void)
{
    //declare variables
    float x, y;

    LCD.Clear();
    LCD.SetFontColor(WHITE);
    LCD.WriteLine("Please touch to start.");
    //waits for touch
    while(!LCD.Touch(&x, &y));
    while(LCD.Touch(&x, &y));

    move_forward(7.0);

    turn_left(90);
/*
